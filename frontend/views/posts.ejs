<div class="login-wrap">
  <h1 class="login-title">로그인</h1>
  <main class="card">
    <form id="loginForm">
      <label for="email">이메일</label>
      <input id="email" placeholder="이메일을 입력하세요" name="email" type="email" required />
      <label for="password">비밀번호</label>
      <input id="password" placeholder="비밀번호를 입력하세요" name="password" type="password" required />
      <p class="helper-text" id="passwordError"></p>
      <button class="btn" type="submit">로그인</button>
    </form>
    <div class="link">
      <a href="/signup">회원가입</a>
    </div>
  </main>
</div>

<script src="/js/login.js"></script>
